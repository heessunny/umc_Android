<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/song_firstLine"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/song_btn_player_setting"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:backgroundTint="#FDF6FE"
            android:layout_marginStart="20dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_player_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/song_btn_player_eq_off"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_player_eq_off"
            app:layout_constraintStart_toEndOf="@id/song_btn_player_setting"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/song_btn_down"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nugu_btn_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/song_btn_more"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/btn_player_more"
            app:layout_constraintTop_toBottomOf="@id/song_btn_down"
            app:layout_constraintEnd_toEndOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/song_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_firstLine"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/song_main"
            app:layout_constraintStart_toStartOf="@id/song_main"
            app:layout_constraintTop_toTopOf="@id/song_main" />


        <TextView
            android:id="@+id/song_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="가수"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/song_main"
            app:layout_constraintEnd_toEndOf="@id/song_main"
            app:layout_constraintTop_toBottomOf="@id/song_title"/>
            <ImageButton
                android:id="@+id/song_singer_arrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/btn_arrow_more"
                android:backgroundTint="#FDF6FE"
                android:padding="0dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@id/song_singer"
               app:layout_constraintTop_toBottomOf="@id/song_title"
                />


    <ImageView
        android:id="@+id/song_album_img"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:src="@drawable/img_album_exp2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/song_singer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
            android:id="@+id/song_lyrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나라는 꽃가루에\n눈이 따끔해 아야"
            android:textColor="@color/gray_color"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/song_album_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/song_lyrics"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/song_like_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="#FDF6FE"
                android:layout_marginTop="2dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_my_like_off"
                />
            <ImageButton
                android:id="@+id/song_my_unlike_off"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#FDF6FE"
                android:padding="0dp"
                android:layout_marginStart="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_player_unlike_off"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/song_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <SeekBar
            android:id="@+id/song_progress_sb"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@null"
            android:progress="0"
            android:progressBackgroundTint="@color/gray_color"
            android:progressTint="@color/purple_500"
            android:thumb="@color/gray_color"
            android:max="100000"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/song_start_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_marginTop="5dp"
            android:layout_marginStart="18dp"
            android:textColor="@color/purple_700"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/song_progress_sb"/>
        <TextView
            android:id="@+id/song_end_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:00"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="18dp"
            android:textColor="@color/gray_color"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/song_progress_sb"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/song_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_progress">

        <ImageButton
            android:id="@+id/song_btn_repeat_inactive"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/nugu_btn_repeat_inactive"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toStartOf="@id/song_btn_skip_previous"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:id="@+id/song_btn_skip_previous"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_miniplayer_previous"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@id/song_btn_play"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:id="@+id/song_btn_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_miniplay_mvplay"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>
        <ImageButton
            android:id="@+id/song_btn_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_miniplay_mvpause"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"/>
        <ImageButton
            android:id="@+id/song_btn_skip_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_miniplayer_next"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/song_btn_play"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:id="@+id/song_btn_random_inactive"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/nugu_btn_random_inactive"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toEndOf="@id/song_btn_skip_next"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/song_page_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    app:layout_constraintTop_toBottomOf="@id/song_bar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <ImageButton
        android:id="@+id/song_instargram"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#FDF6FE"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_actionbar_instagram"
        android:layout_marginEnd="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/song_player_related"
        />
    <ImageButton
        android:id="@+id/song_player_related"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:backgroundTint="#FDF6FE"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:src="@drawable/btn_player_related"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<ImageButton
    android:id="@+id/song_go_list"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:backgroundTint="#FDF6FE"
    android:padding="0dp"
    android:scaleType="centerCrop"
    android:src="@drawable/btn_miniplayer_go_list"
    android:layout_marginStart="120dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@id/song_player_related"/>


  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>