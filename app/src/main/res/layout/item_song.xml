<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_song_cover_img_carview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="11dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_song_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_album_exp2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라일"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_song_cover_img_carview"/>
    <TextView
        android:id="@+id/item_song_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/item_song_title"
        app:layout_constraintStart_toStartOf="@id/item_song_title"/>

    <ImageButton
        android:id="@+id/item_song_start_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#FDF6FE"
        android:padding="0dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_player_play"
        app:layout_constraintEnd_toStartOf="@id/item_song_menu_btn"
        app:layout_constraintTop_toTopOf="@id/item_song_menu_btn"/>
            />

    <ImageButton
        android:id="@+id/item_song_menu_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:backgroundTint="#FDF6FE"
        android:padding="0dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_player_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>