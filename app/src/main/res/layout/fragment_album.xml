<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/album_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/album_header_btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageButton
            android:id="@+id/album_like_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_goneMarginEnd="10dp"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_my_like_off"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/album_header_more"/>
        <ImageButton
            android:id="@+id/album_header_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#FDF6FE"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_player_more"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IU 5th Album \'LILAC\'"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/album_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/album_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유 "
            android:textStyle="bold"
            android:textColor="@color/gray_color"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/album_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/album_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021.03.25|정규|댄스 팝"
            android:textStyle="bold"
            android:textColor="@color/gray_color"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/album_singer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageView
            android:id="@+id/album_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/album_information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/img_album_exp2"/>

    <ImageView
        android:id="@+id/album_backgroundimg"
        android:layout_marginTop="10dp"
        android:layout_width="48dp"
        android:layout_height="200dp"
        android:paddingStart="0dp"
        android:src="@drawable/img_album_lp"
        app:layout_constraintStart_toEndOf="@id/album_img"
        app:layout_constraintBottom_toBottomOf="@id/album_img"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="#3f3fff"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintEnd_toEndOf="@id/album_img"
        app:layout_constraintTop_toBottomOf="@id/album_img"
        app:layout_constraintStart_toStartOf="@id/album_img"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/album_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/album_content_tb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>