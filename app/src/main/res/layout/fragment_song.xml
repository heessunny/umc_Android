<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/album_track_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/album_whole_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/song_mix_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:paddingStart="20dp"
               android:paddingTop="5dp"
               android:paddingEnd="20dp"
               android:paddingBottom="5dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               >


            <TextView
                android:id="@+id/album_preference_mix_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="내 취향 MIX"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageButton
                android:id="@+id/album_preference_mix_toggle_off"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:backgroundTint="#FDF6FE"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="5dp"
                android:src="@drawable/btn_toggle_off"
                app:layout_constraintStart_toEndOf="@id/album_preference_mix_text"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"/>

               <ImageButton
                   android:id="@+id/album_preference_mix_toggle_on"
                   android:layout_width="40dp"
                   android:layout_height="30dp"
                   android:layout_marginStart="5dp"
                   android:backgroundTint="#FDF6FE"
                   android:padding="0dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/btn_toggle_on"
                   android:visibility="invisible"
                   app:layout_constraintStart_toStartOf="@+id/album_preference_mix_toggle_off"
                   app:layout_constraintTop_toTopOf="parent" />
           </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/album_select_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/song_mix_layout"
                app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/btn_playlist_select_off"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체선택"
                    android:textSize="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/album_listening_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/album_select_full"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_browse_arrow_right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="전체듣기"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/album_track_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/album_listening_full"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/album_track1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    >
                    <TextView
                        android:id="@+id/album_track1_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/album_track1_btn_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:paddingStart="7dp"
                        android:paddingEnd="7dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:background="@drawable/title_custom_background"
                        app:layout_constraintStart_toEndOf="@id/album_track1_num"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/album_track1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="라일"
                        app:layout_constraintStart_toEndOf="@id/album_track1_btn_title"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/album_track1_singer"
                        android:layout_width="44dp"
                        android:layout_height="16dp"
                        android:text="아이유 (IU)"
                        android:textColor="@color/gray_color"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@id/album_track1_btn_title"
                        app:layout_constraintTop_toBottomOf="@id/album_track1_title" />
                    <ImageButton
                        android:id="@+id/album_track1_play"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="3dp"
                        android:backgroundTint="#FDF6FE"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_player_play"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/album_track1_more"/>
                    <ImageButton
                        android:id="@+id/album_track1_more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="#FDF6FE"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_player_more"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/album_track2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    >
                    <TextView
                        android:id="@+id/album_track2_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/album_track2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Flu"
                        app:layout_constraintStart_toEndOf="@id/album_track2_num"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/album_track2_singer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/gray_color"
                        android:text="아이유 (IU)"
                        app:layout_constraintStart_toStartOf="@id/album_track2_title"
                        app:layout_constraintTop_toBottomOf="@id/album_track2_title"/>
                    <ImageButton
                        android:id="@+id/album_track2_play"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="3dp"
                        android:backgroundTint="#FDF6FE"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_player_play"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/album_track2_more"/>
                    <ImageButton
                        android:id="@+id/album_track2_more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="#FDF6FE"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_player_more"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/album_track3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    >
                    <TextView
                        android:id="@+id/album_track3_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/album_track3_btn_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:paddingStart="7dp"
                        android:paddingEnd="7dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:background="@drawable/title_custom_background"
                        app:layout_constraintStart_toEndOf="@id/album_track3_num"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/album_track3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Coin"
                        app:layout_constraintStart_toEndOf="@id/album_track3_btn_title"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/album_track3_singer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/gray_color"
                        android:text="아이유 (IU)"
                        app:layout_constraintStart_toStartOf="@id/album_track3_btn_title"
                        app:layout_constraintTop_toBottomOf="@id/album_track3_title"/>
                    <ImageButton
                        android:id="@+id/album_track3_play"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="3dp"
                        android:backgroundTint="#FDF6FE"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_player_play"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/album_track3_more"/>
                    <ImageButton
                        android:id="@+id/album_track3_more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="#FDF6FE"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_player_more"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/album_track4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    >
                    <TextView
                        android:id="@+id/album_track4_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/album_track4_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="봄 안녕"
                        app:layout_constraintStart_toEndOf="@id/album_track4_num"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/album_track4_singer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/gray_color"
                        android:text="아이유 (IU)"
                        app:layout_constraintStart_toStartOf="@id/album_track4_title"
                        app:layout_constraintTop_toBottomOf="@id/album_track4_title"/>
                    <ImageButton
                        android:id="@+id/album_track4_play"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="3dp"
                        android:backgroundTint="#FDF6FE"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_player_play"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/album_track4_more"/>
                    <ImageButton
                        android:id="@+id/album_track4_more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="#FDF6FE"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_player_more"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/album_track5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    >
                    <TextView
                        android:id="@+id/album_track5_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/album_track5_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="봄 안녕"
                        app:layout_constraintStart_toEndOf="@id/album_track5_num"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/album_track5_singer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/gray_color"
                        android:text="아이유 (IU)"
                        app:layout_constraintStart_toStartOf="@id/album_track5_title"
                        app:layout_constraintTop_toBottomOf="@id/album_track5_title"/>
                    <ImageButton
                        android:id="@+id/album_track5_play"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="3dp"
                        android:backgroundTint="#FDF6FE"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_player_play"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/album_track5_more"/>
                    <ImageButton
                        android:id="@+id/album_track5_more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="#FDF6FE"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_player_more"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
